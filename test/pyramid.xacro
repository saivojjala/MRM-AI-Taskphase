<?xml version='1.0'?>

<robot name="Pyramid" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <link name="world"/>

  <joint name="fixed" type="fixed">
    <parent link="world"/>
    <child link="base"/>
  </joint>
<link name="base">
	<pose> 0 0 0 0 0 0</pose>
	<collision>
	       <origin xyz="0 0 0.05" rpy="0 0 0"/>
     	 	<geometry>
        		<box size="1 1 0.1"/>
      		</geometry>
    	</collision>

    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="1 1 0.1"/>
      </geometry>
      <material name="orange"/>
    </visual>

    <inertial>
      <origin xyz="0 0 1" rpy="0 0 0"/>
      <mass value="1"/>
      <inertia
        ixx="1.0" ixy="0.0" ixz="0.0"
        iyy="1.0" iyz="0.0"
        izz="1.0"/>
    </inertial>
  </link>

  <joint name="fixed"  type="fixed">
    <parent link="base"/>
    <child link="level1"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
  </joint>

<link name="level1">
	<collision>
	       <origin xyz="0 0 0.05" rpy="0 0 0"/>
     	 	<geometry>
        		<box size="0.8 0.8  0.1"/>
      		</geometry>
    	</collision>

    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.8 0.8  0.1"/>
      </geometry>
    </visual>

    <inertial>
      <origin xyz="0 0 1" rpy="0 0 0"/>
      <mass value="1"/>
      <inertia
        ixx="1.0" ixy="0.0" ixz="0.0"
        iyy="1.0" iyz="0.0"
        izz="1.0"/>
    </inertial>
  </link>

</robot>
